<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
		<File name="Minesweeper" fileName="logs/minesweeper.log">
			<PatternLayout
                pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p %c{3}.%M(%F:%L) - %m%n" />
		</File>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p %c{3}.%M(%F:%L) - %m%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.qfi.minesweeper" additivity="false" level="ALL">
            <AppenderRef ref="Minesweeper" />
        </Logger>
        <Root level="ALL" additivity="false">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>
